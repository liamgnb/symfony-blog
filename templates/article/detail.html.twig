{% extends 'base.html.twig' %}

{% block title %}DÃ©tail article{% endblock %}

{% block body %}
    <div class="h2 pb-2 text-primary border-bottom border-dark d-flex justify-content-between">
        {{ article.titre }}
        <a href="{{ path('app_categorie_slug', {'slug': article.categorie.slug}) }}" class="badge text-bg-secondary text-decoration-none">{{ article.categorie.titre }}</a>
    </div>
    <span class="badge rounded-pill text-bg-info mb-3">{{ article.createdAt.format('d/m/Y') }}</span>
    <div class="border border-secondary p-2 mb-2 rounded-4">{{ article.contenu }}</div>
    {% if article.commentaires | length >= 1 %}
        <div class="d-flex justify-content-end mb-3">
            <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCommentaires" aria-expanded="false" aria-controls="collapseCommentaires">
                {{ article.commentaires | length }}
            </button>
        </div>
        <div class="collapse" id="collapseCommentaires">
            <div class="card card-body">
                <div class="row justify-content-md-center">
                    <div class="col col-lg-6">
                        <div class="list-group">
                            {% for commentaire in article.commentaires %}
                                <div class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        {{ commentaire.auteur.pseudo is null  }}
                                            <h5 class="mb-1">Anonyme</h5>
                                        {% else %}
                                            <h5 class="mb-1">{{ commentaire.auteur.pseudo }}</h5>
                                        {% endif %}
                                        <small class="text-muted">{{ commentaire.createdAt.format('d/m/Y') }}</small>
                                    </div>
                                    <p class="mb-1">{{ commentaire.contenu }}</p>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
