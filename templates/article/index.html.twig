{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="h2 pb-2 text-primary border-bottom border-dark">
        Liste des articles
    </div>
    <div class="list-group mb-3">
        {% for article in articles %}
            <a href="{{ path("app_articles_slug", {slug: article.slug}) }}" class="list-group-item list-group-item-action">
                <div class="d-flex justify-content-between align-items-center">
                    {{ article.titre }}
                    <span class="badge rounded-pill text-bg-info">{{ article.createdAt.format('d/m/Y') }}</span>
                </div>

            </a>
        {% endfor %}
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
