{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="h2 pb-2 text-primary border-bottom border-dark d-flex justify-content-between">
        Liste des articles
        <a class="badge text-bg-secondary text-decoration-none" href="{{ path('app_articles_nouveau') }}">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
        </a>
    </div>
    <div class="list-group mb-3">
        {% for article in articles %}
            <a href="{{ path("app_articles_slug", {slug: article.slug}) }}" class="list-group-item list-group-item-action">
                <div class="d-flex justify-content-between align-items-center">
                    {{ article.titre }}
                    <span class="badge rounded-pill text-bg-info">{{ article.createdAt.format('d/m/Y') }}</span>
                </div>

            </a>
        {% endfor %}
    </div>
    <div class="navigation d-flex justify-content-center">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
