{% extends 'base.html.twig' %}

{% block title %}Ajouter article{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col col-lg-6">
            <div class="h2 pb-2 text-primary border-bottom border-dark">
                Ajout d'un article
            </div>
            {{ form_start(formArticle) }}
                {{ form_row(formArticle.titre, {
                    'label' : "Titre de l'article",
                    'label_attr' : {
                        'class' : 'text-dark'
                    },
                    'attr' : {
                        'placeholder' : "Veuillez saisir le titre de l'article."
                    }
                }) }}
                {{ form_row(formArticle.contenu, {
                    'attr' : {
                        'placeholder' : "Veuillez saisir le contenu de l'article."
                    }
                }) }}
                {{ form_row(formArticle.categorie) }}
                <div class="d-flex justify-content-end">
                    <input type="submit" class="btn btn-outline-success" value="Ajouter">
                </div>
            {{ form_end(formArticle) }}
        </div>
    </div>
{% endblock %}
