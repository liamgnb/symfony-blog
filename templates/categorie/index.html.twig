{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col col-lg-6">
            <div class="h2 pb-2 text-primary border-bottom border-dark">
                Liste des catégories
            </div>
            <div class="list-group mb-5">
                {% for categorie in categories %}
                    <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <div>
                            {{ categorie.titre }}
                            {% if categorie.articles | length > 1 %}
                                 ({{ categorie.articles | length }} articles)
                            {% else %}
                                ({{ categorie.articles | length }} article)
                            {% endif %}
                        </div>
                        <a href="{{ path('app_categorie_slug', {'slug': categorie.slug }) }}" class="btn btn-outline-secondary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                            </svg>
                        </a>
                    </div>
                {% endfor %}
                <div class="d-flex justify-content-end align-items-center list-group-item list-group-item-action">
                    <span class="badge rounded-pill text-bg-secondary">{{ categories|length }}</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
